# ===========================================
# Diary Orchestrator Agent - Environment Variables
# ===========================================

# AWS Configuration
AWS_REGION=ap-northeast-2
SECRET_NAME=agent-secret

# Application Settings
PORT=8000
HOST=0.0.0.0
DEBUG=false
ALLOWED_ORIGINS=http://localhost:3000

# ===========================================
# Phoenix Tracing Configuration
# ===========================================

# Phoenix 서버 엔드포인트
# 로컬: http://localhost:6006
# EKS: http://phoenix-service:6006
PHOENIX_ENDPOINT=http://localhost:6006

# Phoenix 프로젝트 이름 (트레이스 그룹화)
PHOENIX_PROJECT_NAME=diary-agent

# 트레이싱 활성화 여부 (true/false)
TRACING_ENABLED=true

# 트레이스 샘플링 비율 (0.0 ~ 1.0)
# 1.0 = 모든 요청 추적, 0.5 = 50% 샘플링
TRACE_SAMPLE_RATE=1.0

# ===========================================
# Evaluation Configuration (Optional)
# ===========================================

# 평가 기능 활성화 여부
EVALUATION_ENABLED=false

# 평가에 사용할 LLM 모델
EVALUATOR_MODEL=claude-sonnet-4-5
